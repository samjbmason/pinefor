<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: "new_user user-sign-in"}) do |f| %>

  <fieldset>
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, autocomplete: "off" %>
  </fieldset>

  <fieldset>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </fieldset>

  <% if devise_mapping.rememberable? -%>
    <fieldset class="remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </fieldset>
  <% end -%>
  <p class="forgot-password"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>

  <%= f.submit "Sign in", class: "btn-primary" %>

  <p class="action-switch">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "btn no-border btn-success with-text" %></p>
<% end %>
