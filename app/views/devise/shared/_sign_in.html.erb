<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>

  <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-success with-text" %></p>

    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, autocomplete: "off" %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div>
    <%= f.submit "Sign in", class: "btn-primary" %>
  </div>
<% end %>  <p class="forgot-password"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
